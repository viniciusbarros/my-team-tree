{% extends "default.twig" %}  
{% block content %}
    <div class="grid-container grid-container-padded">
        <h1 class="text-center">Login</h1>
        <div class="grid-x .grid-padding-x">
            <div class="medium-4 medium-offset-4 cell">
                <form id="login" method="post" autocomplete="off">
                    <label class="{{ errors.email ? ' error' : ''}}">E-mail
                        <input type="text" placeholder="email@domain.com" name="email" value="{{input.email}}">
                        {%if errors.email%}
                            <small>-{{errors.email|first}}</small>
                        {%endif%}
                    </label>

                    <label class="{{ errors.password ? ' error' : ''}}">Password
                        <input type="password" placeholder="**********" name="password" value="{{input.password}}">
                        {%if errors.password%}
                            <small>{{errors.password|first}}</small>
                        {%endif%}
                    </label>

                    <button type="submit" class="expanded button">Login</button>
                    {{ csrf.fields|raw }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}